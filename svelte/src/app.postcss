/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    font-family: 'Nirmala UI';
    @apply select-none;
  }

  button {
    @apply cursor-default sm:cursor-pointer;
  }

  video {
    @apply w-3/5;
  }

  input {
    @apply outline-none;
  }
  svg {
    @apply inline-block;
  }
}
@layer utilities {
  .cursor-button {
    @apply cursor-default sm:cursor-pointer;
  }
}
